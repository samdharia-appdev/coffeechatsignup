<div class="page-header">
  <h1>
    Slots
    <a href="/slots/new" class="btn btn-lg btn-success">New Slot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Number</th>
        <th>Event</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @slots.each do |slot| %>
      <tr>
        <td><%= slot.number %></td>
        <td>
          <% if slot.event.present? %>
            <a href="/events/<%= slot.event.id %>">
              <%= slot.event.company_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if slot.user.present? %>
            <a href="/users/<%= slot.user.id %>">
              <%= slot.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/slots/<%= slot.id %>" class="btn btn-primary">Show</a>
          <a href="/slots/<%= slot.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_slot/<%= slot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @slots, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

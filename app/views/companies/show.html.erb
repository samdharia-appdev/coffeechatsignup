<div class="page-header">
  <h3>Company #<%= @company.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Company name</dt>
      <dd><%= @company.company_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/companies" class="btn btn-primary">
        Back
      </a>
      <a href="/companies/<%= @company.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_company/<%= @company.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Company has many events -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Events
      </li>

      <% @company.events.each do |event| %>
        <li class="list-group-item">
          <a href="/events/<%= event.id %>">
            <%= event.company_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/events/<%= event.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/events/<%= event.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_event" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for company_id -->
      <input type="hidden" name="company_id" value="<%= @company.id %>">

      <!-- Label and input for number_of_slots -->
      <div class="form-group">
        <label for="number_of_slots" class="control-label">
          Number of slots
        </label>

        <input type="text" id="number_of_slots" name="number_of_slots" placeholder="Number of slots" class="form-control" value="">
      </div>

      <!-- Label and input for held_on -->
      <div class="form-group">
        <label for="held_on" class="control-label">
          Held on
        </label>

        <input type="text" id="held_on" name="held_on" placeholder="Held on" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Event
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Company has many registered_users -->

